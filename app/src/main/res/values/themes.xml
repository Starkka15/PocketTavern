<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SillyTavern" parent="android:Theme.Material.NoActionBar">
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.PocketTavern.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.SillyTavern</item>
    </style>
</resources>
